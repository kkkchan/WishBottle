/* pages/treeReply/treeReply.wxss */
.small-font{
  font-size:26rpx;
  color: #a0acac;
}

.black-font{
  font-size: 35rpx;
  font-weight: bold;
}
.container {
  height: calc(100% - 70rpx);
}
.container .header{
  box-shadow: 0 0 10rpx #eeeeee;
  padding: 0 20rpx 20rpx;
}
.container .body{
  margin-top: 12rpx;
  box-shadow: 0 0 10rpx #eeeeee;
  padding: 10rpx 20rpx 20rpx;  
}
.container .body .writer{
  padding-top: 20rpx;
  display: inline-flex;
}
.img{
  width: 50rpx;
  height: 50rpx;
   border-radius: 50rpx;
}
.container .body .writer text{
  padding-left:25rpx; 
}
.container .body .content{
  padding-top: 30rpx;
  font-size: 32rpx;
  line-height: 50rpx;
}

.container .body .copyright{
  padding-top: 10rpx;
}

.container .comment{
  padding: 20rpx;
}


.container .comment .comment-item{
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
}

.container .comment .comment-item .comment-info{
  padding-left: 20rpx;
  font-size: 32rpx;
  width: calc(100% - 70rpx);
}

.container .comment .comment-item .comment-info .comment-date{
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
}

.foot {
  display: flex;
  flex-direction: row;
  justify-items: center;
}

.foot image{
  width: 50rpx;
  height: 50rpx;
  padding-left: 20rpx;

}

.foot .comment{
  margin-left: 20rpx;
  padding-left:  20rpx;
  padding-right:20rpx; 
  width: calc(100% - 300rpx);
  /* width: 300rpx; */
  height: 50rpx;
  border: 1rpx solid #2E6CA4;
  border-radius: 45rpx;
  color:gray;
  font-size: 34rpx;
}
.foot button{
}
.mask{
  position: fixed;
  z-index: 98;
  width: 100%;
  height: 100%;
  left: 0rpx;
  top:0rpx;
  background-color: black;
  opacity: 0.5;
}
 .inputArea{
  width: calc(100% - 39rpx);
  bottom:0;
  position: fixed;
  z-index: 99;
  background-color: white;
  padding:0 20rpx;
  max-height: 300px;
}

 .inputArea .inputHeader{
   padding-top:10rpx; 
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
}
.inputArea .inputHeader .inputHeaderText{
  font-size:36rpx;
  color: #a0acac;
}
.inputArea .inputHeader image{
   width: 40rpx;
  height: 40rpx;
}